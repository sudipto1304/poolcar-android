<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PCEditText">
        <attr name="clear_id" format="string"/>
        <attr name="field_id" format="string"/>
        <attr name="hintText" format="string"/>
        <attr name="isPassword" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="IndicatorView">
        <attr format="dimension" name="minWidth"/>
        <attr format="dimension" name="maxWidth"/>
        <attr format="dimension" name="minHeight"/>
        <attr format="dimension" name="maxHeight"/>
        <attr format="string" name="indicatorName"/>
        <attr format="color" name="indicatorColor"/>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="border" format="boolean"></attr>
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="shadow" format="boolean"></attr>
        <attr name="shadow_color" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="Theme">
        <attr name="RoundedImageViewStyle" format="reference"></attr>
    </declare-styleable>

</resources>